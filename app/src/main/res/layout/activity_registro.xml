<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Alumnos"
        android:textSize="40dp"
        android:textColor="#0000ff"/>

        <EditText
            android:id="@+id/matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el Matricula"
            android:textSize="40dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa el Nombre"
            android:textSize="40dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa la Edad"
            android:textSize="40dp"
            android:inputType="number"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="32dp"
            app:icon="@drawable/baseline_save_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:textSize="32dp"
            app:icon="@drawable/baseline_system_security_update_good_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textSize="32dp"
            app:icon="@drawable/baseline_delete_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/consultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar"
            android:textSize="32dp"
            app:icon="@drawable/baseline_content_paste_search_24" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>