<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginHorizontal="8dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/tenmx"
                android:background="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="El CardView en Android es un contenedor visual que te permite mostrar información en forma de “tarjeta” con bordes redondeados, sombras y un diseño moderno, siguiendo las guías de Material Design.
Se usa mucho para mostrar listas de datos (por ejemplo, con RecyclerView) o elementos destacados"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img1"
                tools:ignore="MissingConstraints" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BUY"
               app:layout_constraintTop_toBottomOf="@id/img1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>